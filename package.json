{
  "name": "dera-tak-demo-assistant",
  "private": true,
  "version": "1.8.0",
  "type": "module",
  "main": "dist/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"npm run build:electron && wait-on http://localhost:3001 && electron .\"",
    "electron:build": "npm run build:electron && electron-builder --publish=always",
    "build:electron": "BUILD_TARGET=electron npm run build && tsc electron/main.ts --outDir dist --target es2020 --module commonjs --skipLibCheck && tsc electron/preload.ts --outDir dist --target es2020 --module commonjs --skipLibCheck && tsc electron/autoUpdateService.ts --outDir dist --target es2020 --module commonjs --skipLibCheck && mv dist/main.js dist/main.cjs && mv dist/preload.js dist/preload.cjs && mv dist/autoUpdateService.js dist/autoUpdateService.cjs",
    "release": "npm run build:electron && electron-builder --publish=always --mac --win --linux",
    "release:mac": "npm run build:electron && electron-builder --publish=always --mac",
    "release:win": "npm run build:electron && electron-builder --publish=always --win",
    "release:linux": "npm run build:electron && electron-builder --publish=always --linux"
  },
  "dependencies": {
    "@google/genai": "^1.28.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "googleapis": "^170.1.0",
    "lucide-react": "^0.563.0",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.36.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "three": "^0.166.1",
    "xlsx": "^0.18.5",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^40.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0",
    "wine": "^0.9.13"
  },
  "description": "<div align=\"center\"> <img width=\"1200\" height=\"475\" alt=\"GHBanner\" src=\"https://github.com/user-attachments/assets/0aa67016-6eaf-458a-adb2-6e31a0763ed6\" /> </div>",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.dera-tak.marcus",
    "productName": "Marcus",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/logo.png",
        "to": "logo.png"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "AConteh33",
      "repo": "Marcus-2.0"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "snap",
          "arch": ["x64"]
        }
      ],
      "category": "Office",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Marcus AI Assistant"
    }
  }
}
